<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thryve Dashboard</title>

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background-color: #f4f6f8;
            display: flex;
            height: 100vh;
            width: 100%;
        }

        /* Sidebar */
        .nav {
            width: 230px;
            background-color: #1e293b;
            color: #ffffff;
            display: flex;
            flex-direction: column;
            padding: 30px 18px;
        }

        .nav h1 {
            font-size: 28px;
            text-align: center;
            margin-bottom: 35px;
            color: #38bdf8;
        }

        /* Sidebar buttons */
        .nav button {
            padding: 12px 15px;
            border: none;
            border-radius: 8px;
            background-color: #334155;
            color: #fff;
            font-size: 15px;
            cursor: pointer;
            transition: 0.25s;
            text-align: left;
        }

        .nav button:hover {
            background-color: #38bdf8;
            color: #1e293b;
            transform: translateX(6px);
        }

        /* Bottom button row */
        .button-container {
            margin-top: auto;
            display: flex;
            gap: 8px;
        }

        .button-container button {
            flex: 1;
            padding: 10px 0;
            background-color: #475569;
            border-radius: 6px;
            text-align: center;
            font-size: 13px;
        }

        .button-container button:hover {
            background-color: #38bdf8;
            color: #1e293b;
            transform: none;
        }

        /* Main content */
       .main {
    flex: 1;
    padding: 40px;
    overflow-y: auto;
}


.nav{ 
    width: 230px;
    transition: width 0.3s ease;
    overflow: hidden;
}
.nav.collapsed{
    width: 70px;
}

.nav.collapsed button{
    text-align: center;
    padding: 12px 0;
    font-size: 0;
}

.nav.collapsed button::before{
    content: ".";
    font-size: 16px;
}

.nav.collapsed h1{
    font-size: 0;
}

.nav.collapsed .menu-btn::before{
    content: "☰";
    font-size: 20px;
    display: block;
}
    </style>

</head>
<body>

    <div class="nav" id="sidebar">
        <h1>Thryve</h1>
        <button id="toggleNav" class="menu-btn">☰</button>   
        <button>Dashboard</button>
        <button>Complaints</button>
        <button>Health Tracking</button>
        <button>Student Records</button>
        <button onclick="location.href='/admin/analytics'">Analytics</button>
        <button onclick="location.href='/admin/record-books'">Record Books</button>
          
        <button onclick="location.href='/admin/nurses'">Nurses</button>

        <div class="button-container">
            <button onclick="history.back()">Back</button>
            <button onclick="history.forward()">Forward</button>
            <button onclick="location.href='/logout'">Logout</button>
        </div>
    </div>

    <div class="main">
        <!-- Main content goes here -->
    </div>

</body>
</html>

<script>
    const toggleBtn = document.getElementById("toggleNav");
    const sidebar = document.getElementById("sidebar");

    toggleBtn.addEventListener("click", () => {
        sidebar.classList.toggle("collapsed");
    });
</script>

