<style>
    body {
        background: #f4f5f7;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
        margin: 0;
        padding: 0;
    }

    .page-content {
        padding: 30px;
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    h1 {
        font-size: 32px;
        margin-bottom: 20px;
        font-weight: 700;
    }

    button {
        padding: 12px 20px;
        background: #2d7bf4;
        color: #fff;
        border: none;
        border-radius: 10px;
        font-size: 15px;
        cursor: pointer;
        margin-bottom: 25px;
        transition: 0.25s;
    }

    button:hover {
        background: #1d5fc5;
    }

    form {
        display: flex;
        gap: 10px;
        margin-bottom: 25px;
        flex-wrap: wrap;
        justify-content: center;
    }

    form input,
    form select {
        padding: 12px;
        border-radius: 8px;
        border: 1px solid #cfcfcf;
        background: #fff;
        font-size: 14px;
        width: 200px;
        transition: 0.2s;
    }

    form input:focus,
    form select:focus {
        outline: none;
        border-color: #2d7bf4;
        box-shadow: 0 0 6px rgba(45,123,244,0.25);
    }

    #student-records-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 20px;
        justify-items: center;
        width: 100%;
        max-width: 900px;
    }

    .student-card {
        background: #fff;
        width: 100%;
        max-width: 260px;
        padding: 20px;
        border-radius: 14px;
        box-shadow: 0 4px 14px rgba(0,0,0,0.08);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .student-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.12);
    }

    .student-card h3 {
        margin-bottom: 10px;
        font-size: 20px;
        font-weight: 600;
    }

    .student-card p {
        margin-bottom: 6px;
        font-size: 14px;
        color: #555;
    }

    .view-btn {
        margin-top: 10px;
        padding: 10px 16px;
        background: #2d7bf4;
        color: #fff;
        border: none;
        border-radius: 8px;
        font-size: 14px;
        cursor: pointer;
        transition: 0.25s;
        text-decoration: none; /* if using <a> */
        text-align: center;
        display: inline-block;
    }

    .view-btn:hover {
        background: #2d7bf4;
    }
</style>

<div class="page-content">
    <h1>Student Records</h1>

    <button onclick="location.href='/add/student'">Add Student</button>

    <form action="/search/student">
        <input type="text" name="query" placeholder="Search...">
        <select name="filter">
            <option value="" disabled selected>Filter by</option>
            <option value="class">Class</option>
            <option value="gender">Gender</option>
        </select>
    </form>

    
        <table>
            <thead>
                <th>Name</th>
                <th>Age</th>
                <th>Class</th>
                <th>Height</th>
                <th>Weight</th>
                <th>Actions</th>
            </thead>

            <% if (students) { %>
                <% students.forEach(student => { %>
                    <tbody>
                <td><%= student.name %></td>
                <td><%= student.age %></td>
                <td><%= student.class %></td>
                <td><%= student.height %> cm</td>
                <td><%= student.weight %> kg</td>
                <td><a href="/student/view/<%= student.id %>" class="view-btn">View Record</a></td>                           
            </tbody>
            <% }); %>
        <% } %>
        </table>
        
    </div>
</div>
